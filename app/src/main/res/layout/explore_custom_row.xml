<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/explore_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/explore_relative_padding">

        <TextView
            android:id="@+id/explore_genreTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/explore_genre_text_button_height"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/explore_genre_text_size"
            android:textStyle="bold"
            android:layout_toStartOf="@id/btnMore"
            android:layout_centerVertical="true"
            android:text="GENRE"
            android:gravity="center_vertical"
            android:textColor="@color/input_register_bg"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnMore"
            android:layout_height="@dimen/explore_genre_text_button_height"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="@string/explore_more"
            android:textAlignment="center"
            android:foregroundGravity="center_vertical"
            android:focusable="true"
            android:clickable="true"
            android:textColor="@color/white"
            android:backgroundTint="@color/bg_main"
            android:textSize="@dimen/explore_genre_text_size"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/below_genre__horizontal_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/explore_genre_below_recycler_hright"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"/>


</LinearLayout>